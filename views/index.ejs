<!DOCTYPE html>
<html ng-app="kraftyApp">
  <head>
    <meta charset="utf-8">
    <title>Krafty Kitchen</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.9/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.9/angular-cookies.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.9/angular-route.min.js"></script>
    <script src="/javascripts/app.js"></script>
    <script src="/javascripts/controllers.js"></script>
    <script src="/javascripts/services.js"></script>
  </head>
  <body>
    <div class="container-fluid">

      <div ng-controller="loginController">
        <!-- LOG IN -->
        <h4>Log-In</h4>
        <form id='login' ng-submit="signIn()">
          <label>username</label>
          <input type="text" ng-model="loginInfo.username" placeholder="username">
          <label>password</label>
          <input type="password" ng-model="loginInfo.password" placeholder="password">
          <input type="submit">
        </form>

        <button ng-click="logOut()">logout</button>
      </div>

      <div ng-controller="mainController">
        <!-- SIGN UP/REGISTER -->
        <h4>Sign-Up</h4>
        <form id="signup" ng-submit="createUser()">
          <label>username</label>
          <input type="text" ng-model="newUser.username" placeholder="username">
          <label>password</label>
          <input type="password" ng-model="newUser.password" placeholder="password">
          <input type="submit">
        </form>
      </div>

      <!-- USER SETTINGS -->
      <div class="">
        <form ng-submit="editUser()">
          <label>Name</label>
          <input type="text" ng-model="user.name" placeholder="name">
          <label>Email</label>
          <input type="text" ng-model="user.email" placeholder="email">
          <label>username</label>
          <input type="text" ng-model="user.username" placeholder="name">
          <label>Would you like to recieve emails?</label>
          <input type="checkbox" ng-model="user.newsletter">
          <input type="submit">
        </form>
      </div>



    </div>


    <!-- FORMS I WILL NEED AT SOME POINT -->





  </body>
</html>

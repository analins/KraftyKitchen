<!DOCTYPE html>
<html ng-app="kraftyApp">
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand">The Krafty Kitchen</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <div ng-controller="loginController">
              <button class="navbar-right btn btn-outline logout"  ng-click="logOut()">LOGOUT</button>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <div class="container-fluid profile">

        <div class="row">
          <div ng-controller="searchController">
            <!-- Search Bar -->
            <div class="col-md-3 search-bar">
              <div class="contents">
                <h4>ADD INGREDIENTS</h4>
                <button ng-click="addIngredient()" class="btn-outline redbtn round">+</button>
                <p>add ingredients you currently have to search for recipes that you can make without having to go shopping!</p>

                <form ng-submit="search()">
                  <div ng-repeat="input in inputs">
                    <input type="text" ng-model="input.value"></div>
                    <input type="submit" class="btn-outline redbtn" value="SEARCH">
                  </form>
              </div>
            </div>

            <!-- Results -->
            <div class="col-md-8 search-results">
              <h5 style="margin-top: 10em"><a ng-click="getRecipeResults()">Show Results</a></h5>
              <ul >
                <!-- on click will ngRoute to recipe view -->
                <div class="row">
                <li ng-repeat="recipe in recipeDetails">

                        <div class="col-md-4">
                          <div class="thumbnail">
                            <img ng-src="{{recipe.images[0].hostedLargeUrl}}" alt="recipe image">
                            <div class="caption">
                              <h5>{{recipe.name}}</h5>
                              <a>{{recipe.source.sourceRecipeUrl}}</a>
                            </div>
                          </div>
                        </div>
                        
                  <!-- <a href="#"><h4>{{recipe.name}}</h4></a>
                  <a>{{recipe.source.sourceRecipeUrl}}</a>
                  <img ng-src="{{recipe.images[0].hostedLargeUrl}}" alt="recipe image"> -->
                </li>
                </div>
              </ul>
              <div class="recipes" ng-view>

              </div>
            </div>

          </div>
        </div>


